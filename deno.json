{
	"tasks": {
		"score": "deno run -A src/bigquery_score/scripts/bundle.ts",
		"build": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run https://deno.land/x/mononykus@0.3.5/src/build.ts --site=src/_site/ --base=open-journalism # ./src/_site/islands.js",
		"dev": "deno run -A https://deno.land/x/mononykus@0.3.5/src/build.ts --site=src/_site/ --dev --base=open-journalism # ./src/_site/islands.js",
		"maintain-readme": "deno run -A scripts/maintain_readme.js"
	},
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "deno.ns"],
		"allowJs": true,
		"noUncheckedIndexedAccess": true,
		"checkJs": true
	},
	"lint": {
		"files": {
			"exclude": ["build", "src/_site/build", "cache"]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"singleQuote": true
		},
		"files": {
			"exclude": ["build", "src/_site/build", "cache"]
		}
	}
}
