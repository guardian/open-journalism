{
	"tasks": {
		"score": "deno run -A src/bigquery_score/scripts/bundle.ts",
		"build": "deno run --allow-run scripts/site/build.ts",
		"dev": "deno run --allow-run scripts/site/dev-server.ts",
		"maintain-readme": "deno run -A scripts/maintain_readme.js"
	},
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "deno.ns"],
		"allowJs": true,
		"noUncheckedIndexedAccess": true,
		"checkJs": true
	},
	"lint": {
		"files": {
			"exclude": ["build", "src/_site/build", "cache"]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"singleQuote": true
		},
		"files": {
			"exclude": ["build", "src/_site/build", "cache"]
		}
	}
}
