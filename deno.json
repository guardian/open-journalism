{
	"tasks": {
		"score": "deno run -A src/bigquery_score/scripts/bundle.ts",
		"serve": "deno run --allow-net --allow-read --watch src/dev_server.ts",
		"maintain-readme": "deno run -A scripts/maintain_readme.js"
	},
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "deno.ns"],
		"allowJs": true,
		"noUncheckedIndexedAccess": true,
		"checkJs": true
	},
	"lint": {
		"files": {
			"exclude": ["build", "cache"]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"singleQuote": true
		},
		"files": {
			"exclude": ["build", "cache"]
		}
	}
}
