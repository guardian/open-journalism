{
	"tasks": {
		"score": "deno run -A src/bundle_score.ts",
		"serve": "deno run --allow-net --allow-read https://deno.land/std@0.181.0/http/file_server.ts src",
		"maintain-readme": "deno run -A scripts/maintain_readme.js"
	},
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "deno.ns"],
		"allowJs": true,
		"checkJs": true
	},
	"lint": {
		"files": {
			"exclude": ["build", "cache"]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"singleQuote": true
		},
		"files": {
			"exclude": ["build", "cache"]
		}
	}
}
